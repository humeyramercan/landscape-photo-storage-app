<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity2">

    <ImageView
        android:id="@+id/landscapeImageView"
        android:layout_width="292dp"
        android:layout_height="177dp"
        android:layout_marginTop="44dp"
        android:onClick="selectedImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selectimage" />

    <EditText
        android:id="@+id/noteMultilineText"
        android:layout_width="269dp"
        android:layout_height="104dp"
        android:layout_marginBottom="132dp"
        android:ems="10"
        android:gravity="fill_vertical"
        android:hint="Note"
        android:inputType="textMultiLine"
        android:maxLength="65"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Place"
        android:maxLength="25"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/noteMultilineText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateEditText"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:maxLength="25"
        android:gravity="center"
        android:hint="Date"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landscapeImageView" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="111dp"
        android:layout_height="54dp"
        android:layout_marginBottom="56dp"
        android:onClick="save"
        android:text="Save"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>